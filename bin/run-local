#!/bin/bash

get_repo_dir () {
  SOURCE="${BASH_SOURCE[0]}"
  # While $SOURCE is a symlink, resolve it
  while [ -h "$SOURCE" ]; do
       DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
       SOURCE="$( readlink "$SOURCE" )"
       # If $SOURCE was a relative symlink (so no "/" as prefix, need to resolve
       # it relative to the symlink base directory
       [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
  done
  DIR="$( cd -P "$( dirname "$SOURCE" )/.." && pwd )"
  echo "$DIR"
}

REPO_DIR=$(get_repo_dir)

if [ -z "$APP_MODE" ]; then
  echo "WARNING: No APP_MODE specified. Assuming 'api'."
  export APP_MODE="api"
fi

if [ -z "$YAML_CONFIG_PATH" ]; then
  echo "WARNING: Using config/local.example.yaml config. This probably won't work."
  YAML_CONFIG_PATH="$REPO_DIR/config/local.example.yaml"
fi

export HELLO_FULL_STACK_APP_MODE=$APP_MODE
export HELLO_FULL_STACK_GIT_SHA=$(git rev-parse HEAD)
export HELLO_FULL_STACK_VERSION=$(cat "$REPO_DIR/VERSION" | tr -d '\n')
export HELLO_FULL_STACK_YAML_CONFIG_PATH="$YAML_CONFIG_PATH"

python -m hello_full_stack.entry
